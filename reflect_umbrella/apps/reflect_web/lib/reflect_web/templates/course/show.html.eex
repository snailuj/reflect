<h1>Show Course</h1>

<ul>

  <li>
    <strong>Name:</strong>
    <%= @course.name %>
  </li>

  <li>
    <strong>Short description:</strong>
    <%= @course.short_description %>
  </li>

  <li>
    <strong>Tags:</strong>
    <%= @course.tags %>
  </li>

  <li>
    <strong>Description:</strong>
    <%= @course.description %>
